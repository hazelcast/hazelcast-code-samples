<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>variable-replacers</artifactId>
    <name>Variable replacers</name>

    <parent>
        <artifactId>code-samples</artifactId>
        <groupId>com.hazelcast.samples</groupId>
        <version>0.1-SNAPSHOT</version>
    </parent>

    <properties>
        <main.basedir>${project.parent.basedir}</main.basedir>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.hazelcast</groupId>
            <artifactId>hazelcast</artifactId>
            <version>${hazelcast.version}</version>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <profiles>
        <profile>
            <id>show.encryption-help</id>
            <activation>
                <property>
                    <name>show.encryption-help</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <mainClass>com.hazelcast.config.replacer.EncryptionReplacer</mainClass>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>generate.encrypted-variable</id>
            <activation>
                <property>
                    <name>generate.encrypted-variable</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <mainClass>com.hazelcast.config.replacer.EncryptionReplacer</mainClass>
                            <arguments>
                                <!-- The first argument is a value to be encrypted -->
                                <argument>Variable</argument>
                                <!-- The second argument (optional) is count of iterations used for 
                                     secret key generation from a password -->
                                <argument>23000</argument>
                            </arguments>
                            <systemProperties>
                                <systemProperty>
                                    <key>hazelcast.config</key>
                                    <value>hazelcast-with-replacers.xml</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>run.hazelcast-with-replacers</id>
            <activation>
                <property>
                    <name>run.hazelcast-with-replacers</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <mainClass>com.hazelcast.core.server.StartServer</mainClass>
                            <systemProperties>
                                <systemProperty>
                                    <key>hazelcast.config</key>
                                    <value>hazelcast-with-replacers.xml</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>run.hazelcast-plain</id>
            <activation>
                <property>
                    <name>run.hazelcast-plain</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <mainClass>com.hazelcast.core.server.StartServer</mainClass>
                            <systemProperties>
                                <systemProperty>
                                    <key>hazelcast.config</key>
                                    <value>hazelcast-plain.xml</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>run.hazelcast-exec-linux</id>
            <activation>
                <property>
                    <name>run.hazelcast-exec-linux</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <mainClass>com.hazelcast.core.server.StartServer</mainClass>
                            <systemProperties>
                                <systemProperty>
                                    <key>hazelcast.config</key>
                                    <value>hazelcast-exec-linux.xml</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>run.hazelcast-exec-windows</id>
            <activation>
                <property>
                    <name>run.hazelcast-exec-windows</name>
                </property>
            </activation>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <configuration>
                            <mainClass>com.hazelcast.core.server.StartServer</mainClass>
                            <systemProperties>
                                <systemProperty>
                                    <key>hazelcast.config</key>
                                    <value>hazelcast-exec-windows.xml</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
